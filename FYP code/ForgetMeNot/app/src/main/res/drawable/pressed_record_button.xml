<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape>
            <solid android:color="#80b3ff"/>
            <stroke
                android:color="#000033"
                android:width="5dp"/>
            <corners
                android:radius="20dp"/>
            <padding android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>


        </shape>
    </item>

    <item
        android:id="@+id/half_overlay"
        android:drawable="@drawable/recording2"
        android:width="75dp"
        android:height="75dp"
        android:gravity="center"
        />


</layer-list>




