<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="55dp"

    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:orientation="vertical"
        android:layout_gravity="center">
    <TextView
        android:layout_width="345dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:typeface="monospace"
        android:text="Name of Item:"
        android:id="@+id/textView2" />

    <EditText
        android:layout_marginTop="3dp"
        android:layout_width="345dp"
        android:backgroundTint="@color/white"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:lines="5"
        android:text=""
        android:ems="10"
        android:id="@+id/nameOfItem"
        android:height="30dp"
        android:padding="5dp"
        android:layout_weight="0.04"
        android:background="@drawable/edit_box_border"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        <TextView
            android:layout_width="325dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:typeface="monospace"
            android:text="or choose the following: "
            android:id="@+id/textView3" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"

            >
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/glasses_button"
                android:id="@+id/glassesButton"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/key_button"
                android:id="@+id/keyButton"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/wallet_button"
                android:id="@+id/walletButton"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/pen_button"
                android:id="@+id/penButton"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/car_button"
                android:id="@+id/carButton"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/book_button"
                android:id="@+id/bookButton"/>
        </LinearLayout>

    </LinearLayout>





<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    android:layout_gravity="center">
    <TextView
        android:layout_width="345dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_gravity="center"

        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:typeface="monospace"
        android:text="Add Notes:" />



    <EditText
        android:layout_marginTop="3dp"
        android:layout_width="345dp"
        android:backgroundTint="@color/white"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="top"
        android:maxLines="3"
        android:text=""
        android:ems="10"
        android:id="@+id/editText"
        android:height="80dp"
        android:layout_weight="0.5"
        android:inputType="textMultiLine"
        android:background="@drawable/edit_box_border"/>
    ></LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
   android:layout_gravity="center"
    >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/state_cancel_button"
        android:id="@+id/cancel_button"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_gravity="center"

        android:text="Cancel"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="140dp">

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:background="@drawable/state_next_button"
        android:id="@+id/next_button"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_gravity="center"
        android:text="Next"/>
</LinearLayout>
</LinearLayout>



</LinearLayout>