<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
  >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Track Item"/>
    <com.google.android.gms.maps.MapView

        android:layout_width="match_parent"
android:layout_marginTop="40dp"
        android:layout_height="match_parent"
        android:id="@+id/map_container"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:layout_marginTop="212dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        >



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/state_back_button"
                android:id="@+id/back_button"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:text="Cancel"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">

            <Button
                android:id="@+id/delete_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/state_bin_button" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
               android:textAlignment="center"
                android:text="Delete"
                android:textColor="@color/white"
                android:textSize="17sp"

                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="25dp"
            >

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:background="@drawable/state_not_vibrate_button"
                android:id="@+id/stop_vibrating"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textAlignment="center"
                android:text="Disable"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >



            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:background="@drawable/vibrating_button"
                android:id="@+id/start_vibrating"                />



            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="Enable"/>
        </LinearLayout>
    </LinearLayout>



</FrameLayout>