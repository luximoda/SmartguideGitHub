<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/blue"
  >

    <TextView

        android:text="Are you sure you want to delete this item?"
        android:layout_gravity="center"
        android:textStyle="bold"
 android:textColor="@color/white"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/textView4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <Button
            android:background="@drawable/state_cancel_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/cancel_delete_button"/>

        <Button
            android:background="@drawable/state_done_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/enable_delete_button"
            android:layout_marginLeft="50dp"/>
    </LinearLayout>
</LinearLayout>